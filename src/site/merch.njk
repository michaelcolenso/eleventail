---
title: Merch
layout: default
---
{% for product in products %}
<section class="text-gray-700 body-font overflow-hidden">
  <div class="container px-5 pb-12 mx-auto">
    <div class="lg:w-4/5 mx-auto flex flex-wrap">
      <div class="lg:w-1/2 w-full lg:pr-10 lg:py-6 mb-6 lg:mb-0">
        <h2 class="text-sm title-font text-gray-500 tracking-widest">{{product.tagline}}</h2>
        <h1 class="text-gray-900 text-3xl title-font font-medium mb-4">{{product.name}}</h1>
        <p class="leading-relaxed mb-4">{{product.description}}</p>
 <form id="form" action="" method="post">
        <div class="flex items-center border-t border-gray-300 py-2">
          <span class="text-gray-500">Size</span>
          <div class="ml-auto items-baseline text-gray-900">
            <label for="small" class="inline-flex items-baseline mr-2">
                <input type="radio" id="small" name="size" value="small" class="form-radio self-center h-4 w-4 text-gray-500" >
                    <span class="ml-2 text-gray-700 text-sm">S</span>
            </label>
              <label class="inline-flex items-baseline mr-2">
                <input type="radio" id="medium" name="size" value="medium" class="form-radio h-6 w-6 self-center text-gray-500" >
                    <span class="ml-2 text-gray-700 text-base">M</span>
            </label>
              <label class="inline-flex items-baseline mr-2">
                <input type="radio" id="large" name="size" value="large" class="form-radio h-8 w-8 self-center text-gray-500" >
                    <span class="ml-2 text-gray-700 text-lg ">L</span>
            </label>
            </div>
            
        </div>
        <div class="flex items-center border-t border-gray-300 py-2">
          <span class="text-gray-500">Color </br><small><i>Color in photo not available</i></small></span>
          <div class="ml-auto items-baseline text-gray-900">
            <label for="color" class="inline-flex items-baseline mr-2">
                <input type="radio" id="color" name="color" value="teal" class="form-radio text-teal-700 self-center h-8 w-8 text-gray-500" checked >
                    <span class="ml-2 text-teal-700 text-lg">Teal</span>
            </label>
             
            </div>
            
        </div>
        <div class="flex items-baseline border-t border-b mb-6 border-gray-300 py-2">
          <span class="inline-flex text-gray-500">
          <label for="quantity">Quantity</label>
          </span>
          <span class="ml-auto text-gray-900">
          <input class="form-input" type="number" id="quantity" name="quantity" value="1"
                 min="1"
                 max="10" />
                 <input type="hidden" name="sku" value="{{product.sku}}" />
            </span>
        </div>
        <div class="flex">
          <span class="title-font font-medium text-2xl text-gray-900">${{product.amount}}</span>
          <button type="submit" class="flex ml-auto text-white bg-indigo-500 border-0 py-2 px-6 focus:outline-none hover:bg-indigo-900 rounded">Buy Now</button>
        </div>
        </form>
      </div>
      <img alt="ecommerce" class="lg:w-1/2 w-full lg:h-auto h-64 object-contain object-center rounded" src="{{product.image}}">
    </div>
  </div>
</section>
{% endfor %}

      

    <script src="https://js.stripe.com/v3/"></script>